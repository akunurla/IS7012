<div>
    @if (Model.Company.Candidates == null || Model.Company.Candidates.Count == 0)
    {
<div class="alert alert-info">
    <h4>No Candidates</h4>
</div>
    }
            else
            {
<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            
            <th>Industry</th>

            <th></th>
        </tr>
    </thead>
            <tbody>
                @foreach (var ca in Model.Company.Candidates)
                {
                    <tr>
                        <td>@ca.FirstName</td>
                      
                        <td>@ca.IndustryId</td>

                       <td><a href="/Candidates/Details?id=@ca.Id">Details</a>
                    </tr>
}
            </tbody>
</table>}

</div>




<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.Id">Edit</a> |
